{
  "name": "onchain",
  "version": "1.1.0",
  "description": "On Chain library for Solidity",
  "files": [
    "build",
    "contracts",
    "test/behaviors",
    "solidity",
    "token",
    "hardhat"
  ],
  "scripts": {
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "console": "hardhat console",
    "coverage": "hardhat coverage",
    "lint": "npm run lint:js && npm run lint:sol",
    "lint:fix": "npm run lint:js:fix",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint . --fix",
    "lint:sol": "solhint --max-warnings 0 \"contracts/**/*.sol\"",
    "test": "hardhat test",
    "flatten": "hardhat flatten",
    "gas-report": "env ENABLE_GAS_REPORT=1 hardhat test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/OpenZeppelin/zeppelin-solidity.git"
  },
  "keywords": [
    "solidity",
    "ethereum",
    "smart",
    "contracts",
    "security",
    "assets"
  ],
  "author": "Cyril Lapinte <cyril.lapinte@openfiz.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sirhill/onchain/issues"
  },
  "homepage": "https://github.com/sirhill/onchain",
  "devDependencies": {
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@nomiclabs/hardhat-truffle5": "^2.0.0",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "chai": "^4.3.0",
    "eslint": "^6.5.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-mocha-no-only": "^1.1.0",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eth-sig-util": "^3.0.0",
    "ethereumjs-util": "^7.0.7",
    "ethereumjs-wallet": "^1.0.1",
    "hardhat": "^2.0.11",
    "hardhat-gas-reporter": "^1.0.4",
    "lodash.startcase": "^4.4.0",
    "lodash.zip": "^4.2.0",
    "micromatch": "^4.0.2",
    "mocha": "^8.0.1",
    "solhint": "^3.2.0",
    "solidity-coverage": "^0.7.11",
    "solidity-docgen": "^0.5.3",
    "web3": "^1.3.4"
  }
